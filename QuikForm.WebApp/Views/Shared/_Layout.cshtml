<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuikForm.WebApp</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com%22%3E/">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital@0;1&family=Rubik+Mono+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/pico/pico.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuikForm.WebApp.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</head>
<body>
    <header>
        <nav class="container">
            <div class="home-logo">
                <a class="quikform" asp-controller="Home" asp-action="Index" style="display: flex;
                                        justify-items: center;
                                        align-content: center;
                                        gap: .5rem;
                                        color: #EEF4F6">
                    <img src="/images/file-logo.svg" class="logo-file" />
                    <span class="quikform-home-link">QuikForm</span>
                </a>
            </div>
            <ul>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index" style="color: #EEF4F6; line-height:1;">Tableau de bord</a>
                </li>
                <partial name="_LoginPartial" />
            </ul>
        </nav>
    </header>
    <main class="container">
        @RenderBody()
    </main>
    <footer>
        <div class="container center-content">
            <div class="footer-center">
                <img class="logo-footer" src="/images/logo-round.svg" />
                <div>
                    Sarah LÉON / Elsa THIÉVET / Daniel VU
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
