@model QuestionViewModel

<div class="question-form-vc" id="question-id-@Model.Id">
    <div class="question-body">
        <input asp-for="Label" class="question-label" type="text" data-target-question="question-id-@Model.Id" placeholder="Entrez votre question" />
        <select name="question-type" id="question-type" data-target-question="question-id-@Model.Id">
            @foreach (InputTypeViewModel inputTypeViewModel in ViewBag.InputTypes)
            {
                @if (Model.InputTypeViewModel.Id == inputTypeViewModel.Id)
                {
                    <option value="@inputTypeViewModel.Markup" selected>@inputTypeViewModel.Label</option>
                }
                else
                {
                    <option value="@inputTypeViewModel.Markup">@inputTypeViewModel.Label</option>
                }
            }
        </select>
        <vc:field-form-list field-view-models="Model.FieldViewModels" question-id="Model.Id" input-type-view-model="Model.InputTypeViewModel" />
    </div>
    <div class="mandatory-trash">
        <div type="text">
            <label>
                Obligatoire
                @if (Model.IsMandatory)
                {
                    <input name="IsMandatory" class="question-IsMandatory" data-target-question="question-id-@Model.Id" type="checkbox" checked />
                }
                else
                {
                    <input name="IsMandatory" class="question-IsMandatory" data-target-question="question-id-@Model.Id" type="checkbox" />
                }
            </label>
        </div>
        <div class="trash delete-question-button" data-target-question="question-id-@Model.Id"><i class="fa-regular fa-trash-can"></i></div>
    </div>
</div>
