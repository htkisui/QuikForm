@model FormViewModel;
<div class="form-full-vc">
    <section class="form-title">
        <h4>Titre</h4>
        <h2>@Model.Title</h2>
    </section>

    <section class="dates">
        <p><u>Créé le </u> : @Model.CreatedAt.ToString("dd/MM/yy")</p>
        @if (Model.PublishedAt != null)
        {
            <p>Publié le @Model.PublishedAt?.ToString("dd/MM/yy")</p>
        }
        @if (Model.ClosedAt != null)
        {
            <p>Clôturé le @Model.ClosedAt?.ToString("dd/MM/yy")</p>
        }
    </section>

    <section class="form-description">
        <h4>Description</h4>
        <p>@Model.Description</p>
    </section>

    @* Question list *@
    <vc:question-full-list question-view-models="quesionViewModels" />

    <section class="question-list">
        @if (ViewBag.Role == "User")
        {
            <div class="action">
                <a href="#" role="button" class="primary">Envoyer</a>
            </div>
        }
    </section>
</div>




