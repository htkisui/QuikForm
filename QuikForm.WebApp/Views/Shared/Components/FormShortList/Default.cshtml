@model List<FormViewModel>

<div class="form-short-list-vc" style="overflow: hidden;">
    <div class="carousel" id="formCarousel" style="position: relative;">
        <div class="carousel-slides" style="display: flex; overflow: hidden; height: 100vh; flex-wrap: nowrap; gap: 20px;">
            @foreach (var form in Model)
            {
                <div class="carousel-slide" style="flex: 0 0 auto; width: calc(100% / var(--slides-visible));">
                    <vc:form-short form-view-model="@form" />
                </div>
            }
        </div>
        <div class="carousel-controls" style="position: absolute; z-index: 5; left: 10px; right: 10px; top: 10px; display: flex; justify-content: space-between;">
            <button id="prevBtn">Précédent</button>
            <button id="nextBtn">Suivant</button>
        </div>
        <div class="carousel-dots"></div>
    </div>
</div>



