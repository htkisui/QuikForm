@model List<QuestionViewModel>

<div class="question-list-vc">
    <div class="question-form-list">
        @foreach (QuestionViewModel questionForm in Model)
        {
            <vc:question-form question-view-model="@questionForm" />
        }
    </div>
    <button id="create-question" class="btn btn-info" type="submit">Ajouter</button>
</div>

<script>
    $(function () {
        $("#create-question").on("click", (e) => {
            $.post("/Question/Create", (data) => {
                $("#question-form-list").append(data)
            });
        });
    });
</script>